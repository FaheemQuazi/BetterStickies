{
    "name": "better-stickies",
    "author": {
        "name": "Faheem Quazi",
        "email": "faheem@quazi.me",
        "url": "http://quazi.me"
    },
    "description": "A better desktop sticky note suite",
    "version": "0.1.0-test",
    "main": "main.js",
    "scripts": {
        "start": ".\\node_modules\\.bin\\electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --publish always"
    },
    "readme": "see README file",
    "repository": {
        "type": "github",
        "url": "https://github.com/FaheemQuazi/BetterStickies"
    },
    "license": "MIT",
    "dependencies": {
        "electron-updater": "^2.20.1",
        "electron-window-manager": "^1.0.5",
        "moniker": "^0.1.2",
        "tinycolor2": "^1.4.1"
    },
    "devDependencies": {
        "electron": "^1.7.10",
        "electron-builder": "^19.55.3"
    },
    "build": {
        "appId": "me.quazi.betterstickies",
        "productName": "Better Stickies",
        "copyright": "Copyright (C) 2018 Faheem Quazi",
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}
